# Normal
# empaquetar: mvnw clean package
FROM eclipse-temurin:21-alpine
COPY target/catalogo-0.0.1-SNAPSHOT.jar /usr/app.jar
ENV PORT=8080
EXPOSE 8080
ENTRYPOINT ["java","-jar","/usr/app.jar"]

